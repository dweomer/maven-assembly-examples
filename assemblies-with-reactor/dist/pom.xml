<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.test.parent</groupId>
    <artifactId>root</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

  <name>Packaging Test : Distribution</name>
  <artifactId>dist</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-1</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-2</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-3</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-4</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-5</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-6</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-7</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-8</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-9</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.test.parent</groupId>
      <artifactId>package-10</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>make-bundles</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>proj1-assembly.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>

